{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/^ghcr\\.io\\/matejveselucll\\/demo-cloud-and-operations-back-end-(dev|main|qa)$/"],
      "versionCompatibility": "^(?<version>.*)$",
      "versioning": "semver"
    }
  ],
  "schedule": ["* 0-4 * * *"]
}
